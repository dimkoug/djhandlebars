        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tag{{#if data.obj}}
                        Update
                    {{else}}
                        Create
                    {{/if}}</h5>
                <div class="row">  
                    <form action="{{url}}" method="{{data.method}}" id="form" data-model="{{model}}"  data-collection="{{data.collection}}">
                        <input type="hidden" id="id" value="{{data.obj.id}}" name='id'>
                        <div class="mb-3"><input type="text" class="form-control" id="id_name" value="{{data.obj.name}}" name='name' placeholder="name"></div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>